npm run type-check

if [ $? -ne 0 ]; then
  echo "âŒ Type check failed! Fix errors before committing."
  exit 1
fi

echo "ğŸ“ Running linter..."
npm run lint

if [ $? -ne 0 ]; then
  echo "âš ï¸  Linter warnings found. You can fix with: npm run lint:fix"
  # Don't exit with error for linter - just warnings
fi

echo "âœ… Pre-commit checks passed!"
exit 0
